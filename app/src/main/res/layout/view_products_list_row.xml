<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/productListRow_titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Newest Product"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"
        android:textColor="@color/colorOnPrimary"/>
    <TextView
        android:id="@+id/productListRow_showAllProductTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="See all"
        android:layout_alignParentRight="true"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/productListRow_rV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/productListRow_showAllProductTV" />
    <ProgressBar
        android:id="@+id/productListRow_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"/>
</merge>