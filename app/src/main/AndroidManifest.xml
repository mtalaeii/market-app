<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mtalaeii.marketapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ApiStructure.ApiService2"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MarketApp">
        <activity android:name=".main.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ProductsStructure.ProductActivity" />
        <activity android:name=".ProductsStructure.ProductListActivity" />
        <activity android:name=".main.MainActivity"/>
    </application>

</manifest>